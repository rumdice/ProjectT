extends layout.pug


block content
  - var res_url = url;
  - var res_request = request;
  - var res_response = response;
  
  title= title
  h1 Packet Page
  br
  br
  
  form(class="form-signin" method="POST" action="/packet/send")
    p Packet Request
    p
    .col-xs-3
      .input-group
        p
        label(for="url") URL
        input(type="text" name="url" id="url" class="form-control" value = res_url)
        p
        label(for="packet_body") BODY
        input(type="text" name="packet_body" id="packet_body" class="form-control" value = res_request)
      p 
      button.btn.btn-primary(type="submit") Send

    br
    br
    br
    br
    br
    br
    br
    br
    br
    br
    br
    br
  
    
    .col-xs-4
      .input-group
        p Packet Response
        label(for="response")
        textarea#response(type="text" name='response' rows='10' cols='60')
          | #{res_response}

    
    br
    br
    br
    br
    br
    br
    br
    br

        